<div class="container">
  <div class="row">
    <div class="col-2">
      <%= image_tag @user.image, class: 'rounded img-fluid' %>
    </div>
    <div class="col-6">
      <h2>
        <%= @user.full_name %>
      </h2>
      <p>
        <strong>
          <%= description1_content %></strong><br />
        <%= @user.description1 %>
      </p>
      <p>
        <strong>
          <%= description2_content %></strong><br />
        <%= @user.description2 %>
      </p>
      <p>
        <strong>
          <%= description3_content %></strong><br />
        <%= @user.description3 %>
      </p>
      <p>
        <%= link_to "LinkedIn Profile", @user.profile_url %>
      </p>
    </div>
  </div>
</div>
